
    <% flash.each do |key, value| %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= value %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>


<br><br>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% @artworks.each do |artwork| %>
        <% if artwork.picture.attached? %>
        <div class="col">
        <div class="card h-100">
            <a href="<%= artwork_url(artwork.id) %>"><img src="<%= url_for(artwork.picture) %>" alt="<%= artwork.title %>"  class="card-img-top"></a>
        
            <div class="card-body"></div>
                <div class="card-footer">
                    <h6 class="text"><%= artwork.title %> </h6>
                    <p class="text-muted"><%= artwork.description %></p>
                    <% if current_user == @user %>
                        <div class='d-grid gap-2 d-md-flex justify-content-md-end'>
                            <%= button_to "Delete", artwork_url(artwork.id), method: :delete %>
                        </div>
                    <% end %>
                </div>
        </div>
        </div>
        <% end %>

    <% end %>

</div>