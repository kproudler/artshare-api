<h1>Hello <%= @user.username %>!</h1>
<br>


<div class="row row-cols-3 card-group">
    <% @artworks.each do |artwork| %>
        <div class="card">
            <img src="<%= artwork.image_url %>" alt="<%= artwork.title %>" class="card-img-top">
            <div class="card-body"></div>
            <div class="card-footer">
                <h6 class="text"><%= artwork.title %> </h6>
                <p class="text-muted"><%= artwork.description %></p>
                <% if current_user == @user %>
                    <div class='d-grid gap-2 d-md-flex justify-content-md-end'>
                        <button class="btn btn-danger">
                            <%= button_to "Delete", artwork_url(artwork.id), method: :delete %>
                        </button>
                    </div>
                <% end %>
        </div>
        </div>

    <% end %>
</div>
